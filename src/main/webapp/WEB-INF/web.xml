<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                               http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddContactServlet</servlet-name>
        <servlet-class>com.test.contactproject.servlet.AddContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findContactServlet</servlet-name>
        <servlet-class>com.test.contactproject.servlet.findContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddContactServlet</servlet-name>
        <url-pattern>/contacts/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListContactServlet</servlet-name>
        <servlet-class>com.test.contactproject.servlet.ListContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteContactServlet</servlet-name>
        <servlet-class>com.test.contactproject.servlet.DeleteContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateContactServlet</servlet-name>
        <servlet-class>com.test.contactproject.servlet.UpdateContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListContactServlet</servlet-name>
        <url-pattern>/contacts/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteContactServlet</servlet-name>
        <url-pattern>/contacts/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateContactServlet</servlet-name>
        <url-pattern>/contacts/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findContactServlet</servlet-name>
        <url-pattern>/contacts/find</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
